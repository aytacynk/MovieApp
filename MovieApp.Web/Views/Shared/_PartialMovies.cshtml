@using MovieApp.Web.Models
@model IEnumerable<Movie>

<div class="row">
    @foreach (Movie movie in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/img/@(movie.Image)" class="bd-placeholder-img card-img-top" alt="@movie.Name" title="@movie.Name" />
                <div class="card-body">
                    <p class="card-text">@movie.Name</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-muted">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-info">Details</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
